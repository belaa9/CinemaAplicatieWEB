@page
@model CinemaAplicatieWEB.Pages.Showtimes.DetailsModel
@{
    ViewData["Title"] = "Showtime Details";
}

<h1>Showtime Details</h1>

<div>
    <h4>Showtime</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Movie</dt>
        <dd class="col-sm-10">@Model.Showtime.Movie.Title</dd>
        <dt class="col-sm-2">Hall</dt>
        <dd class="col-sm-10">@Model.Showtime.Hall.Name</dd>
        <dt class="col-sm-2">Date & Time</dt>
        <dd class="col-sm-10">@Model.Showtime.DateTime</dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Showtime.Id" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
