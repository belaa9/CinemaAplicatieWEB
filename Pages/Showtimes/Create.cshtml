@page
@model CinemaAplicatieWEB.Pages.Showtimes.CreateModel
@{
    ViewData["Title"] = "Create Showtime";
}

<h1>Create Showtime</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Showtime.MovieId" class="control-label">Movie</label>
        <select asp-for="Showtime.MovieId" class="form-control" asp-items="@(ViewData["Movies"] as SelectList)"></select>
    </div>
    <div class="form-group">
        <label asp-for="Showtime.HallId" class="control-label">Hall</label>
        <select asp-for="Showtime.HallId" class="form-control" asp-items="@(ViewData["Halls"] as SelectList)"></select>
    </div>
    <div class="form-group">
        <label asp-for="Showtime.DateTime" class="control-label">Date & Time</label>
        <input asp-for="Showtime.DateTime" class="form-control" type="datetime-local" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>
