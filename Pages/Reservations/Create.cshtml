@page
@model CinemaAplicatieWEB.Pages.Reservations.CreateModel
@{
    ViewData["Title"] = "Create Reservation";
}

<h1>Create Reservation</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Reservation.UserId" class="control-label">User</label>
        <select asp-for="Reservation.UserId" class="form-control" asp-items="@(ViewData["Users"] as SelectList)"></select>
    </div>

    <div class="form-group">
        <label asp-for="Reservation.HallId" class="control-label">Hall</label>
        <select asp-for="Reservation.HallId" class="form-control" asp-items="@(ViewData["Halls"] as SelectList)"></select>
    </div>

    <h3>Select Seats</h3>
    <table class="table table-bordered text-center">
        <thead>
            <tr>
                <th>Row</th>
                @for (int i = 1; i <= 11; i++)
                {
                    <th>@i</th>
                }
            </tr>
        </thead>
        <tbody>
            @for (char row = 'A'; row <= 'F'; row++)
            {
                <tr>
                    <td>@row</td>
                    @for (int seat = 1; seat <= 11; seat++)
                    {
                        <td>
                            <input type="checkbox" name="SelectedSeats" value="@($"{row}{seat}")" />
                            <label>@($"{row}{seat}")</label>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group">
        <label asp-for="Reservation.ReservationDate" class="control-label">Reservation Date & Time</label>
        <input asp-for="Reservation.ReservationDate" class="form-control" type="datetime-local" />
    </div>

    <button type="submit" class="btn btn-primary">Reserve</button>
</form>
