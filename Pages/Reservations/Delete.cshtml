@page
@model CinemaAplicatieWEB.Pages.Reservations.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Reservation</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Seats</dt>
        <dd class="col-sm-10">@Model.Reservation.Seats</dd>

        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.Reservation.User.Name</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Reservation.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
