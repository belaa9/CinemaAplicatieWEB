@page
@model CinemaAplicatieWEB.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>
<form method="post">
    <div>
        <label>Email:</label>
        <input asp-for="Email" />
    </div>
    <div>
        <label>Password:</label>
        <input asp-for="Password" type="password" />
    </div>
    <button type="submit">Login</button>
    <p style="color:red;">@Model.ErrorMessage</p>
</form>
