@page
@model CinemaAplicatieWEB.Pages.Halls.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Hall</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Hall.Name
        </dd>
        <dt class="col-sm-2">
            Capacity
        </dt>
        <dd class="col-sm-10">
            @Model.Hall.Capacity
        </dd>
        <dt class="col-sm-2">
            Layout
        </dt>
        <dd class="col-sm-10">
            @(string.IsNullOrWhiteSpace(Model.Hall.Layout) ? "Default" : "Custom")
        </dd>
    </dl>
</div>
<div>
    <a asp-page="Edit" asp-route-id="@Model.Hall.Id">Edit</a> |
    <a asp-page="Index">Back to List</a>
</div>
